{

    "manifest_version": 2,
    "version" : "0.4.11.3",
    "name": "ACX Simple",
    "description": "ACX Simple Interface",
    "permissions": ["storage",
		    "activeTab"
		   ], // maybe not needed
    "icons": {
	"128" : "icons/acf-simple-128.png"
    },
    "browser_action": {
	"default_icon": "icons/acf-simple-128.png",
	"default_title": "Simple ACX"
    },
    
    "content_scripts": [
	{
            "matches": [
		"https://astralcodexten.substack.com/p/*/comments",
		"https://astralcodexten.substack.com/p/*/simple"
	    ],
	    "js": [
		"new-ui.js",
		"jquery-3.5.1.min.js"
		  ],
	    "css": ["style.css", "main.css"],
	    "run_at": "document_start" // spin at start to stop crap
	} ]
}

